pipeline {
    agent any

    tools {
        nodejs 'NodeJS' // Use the configured NodeJS tool named 'NodeJS'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/jyotiranjanpradhan/Accuaculture-frontend.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }

    post {
        success {
            echo 'Frontend build completed successfully!'
            // Optionally trigger deployment here
            // sh 'npm run deploy'
        }
        failure {
            echo 'Frontend build failed!'
        }
    }
}
